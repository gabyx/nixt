{
  "name": "nixt",
  "version": "0.3.2",
  "description": "Test-runner for Nix",
  "author": "Dustin Lacewell",
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=16.17"
  },
  "bin": {
    "nixt": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --coverage --verbose"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^16.11.12",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.2",
    "ts-jest-mock-import-meta": "^0.12.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "colors": "^1.4.0",
    "inversify": "^6.0.1",
    "meow": "^10.1.3",
    "reflect-metadata": "^0.1.13"
  }
}
